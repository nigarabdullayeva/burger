<header>
    <h1> It is Burger Time!</h1>
    <img src = "../public/css/burger.jpg" alt="Burger">
</header>

<main class = "container-fluid">
  <div class = "container-fluid">
    <div class = "container">
     <div class="row">
        <div id="insertedBurgers" class= "col-md-6">
           <h2> Burgers to devour!</h2>
            <ul>
               {{#each burgers}}
                 {{#unless devoured}}
                   {{> burgers/burger-block devoured=true}}
                 {{/unless}}
               {{/each}}
            </ul>
        </div>
        <div id="devouredBurgers" class="col-md-6">
            <h2>Devoured Burgers</h2>
             <ul>
               {{#each burgers}}
                 {{#if devoured}}
                   {{> burgers/burger-block devoured=false}}
                 {{/if}}
               {{/each}}
            </ul>
        </div>
      </div>
     </div>
   </div>


   <div class ="container-fluid?">
      <div class ="container">
        <div class ="row">
           <h2> Add your favorite burger!</h2>
         <form class="form-inline">
               <div class="form-group mx-sm-3 mb-2">
                 <label for="inputBurger" class="sr-only">Burger</label>
                 <input type="text" id="newBurger" placeholder="burgerName">
                </div>
             <button type="submit" class="btn btn-outline-warning mb-2">Add Burger!</button>
         </form>
        </div>
      </div>
    </div>

</main>